---
import Tag from "./Tag.astro";

interface Props {
    url: string;
    title: string;
    description: string;
    date: Date;
    tags: string[] | undefined;
    image?: string;
}

const { url, title, description, date, tags, image } = Astro.props;
---
<li class="h-full relative min-h-36 group/newsitem">
    <a class="absolute top-0 left-0 bottom-0 right-0" href={url}></a>
    <span class="h-full flex flex-col relative pointer-events-none z-10 rounded-md shadow p-4 cursor-pointer bg-rosePineDawn-surface dark:bg-rosePineMoon-surface group-hover/newsitem:bg-rosePineDawn-overlay dark:group-hover/newsitem:bg-rosePineMoon-overlay">
        <p class="text-xs text-rosePineDawn-text/90 dark:text-rosePineMoon-text/90">{date.toLocaleString(Astro.currentLocale, { dateStyle: "long" })}</p>
        <h3 class="text-2xl font-bold">{title}</h3>
        <p class="mb-4 text-rosePineDawn-text/90 dark:text-rosePineMoon-text/90">{description}</p>
        <div class="flex flex-row flex-wrap mt-auto gap-2">
            {tags?.map((tag) => (
                <Tag name={tag} />
            ))}
        </div>
    </span>
</li>

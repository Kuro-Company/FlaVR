---
interface Props {
    name: string;
    class?: string;
}

const { name } = Astro.props;
---

{/* eslint-disable-next-line @typescript-eslint/restrict-template-expressions */ }
<a class={"[pointer-events:all] leading-4 px-2 pb-1.5 pt-0.5 bg-rose-pine-dawn-muted dark:bg-rose-pine-moon-muted hover:bg-rose-pine-dawn-subtle dark:hover:bg-rose-pine-moon-subtle hover:underline decoration-[1.5px] text-white dark:text-rose-pine-moon-text " + Astro.props.class} href={`/${Astro.currentLocale ?? "en"}/news/tags/${name}/`}>
    {name}
</a>

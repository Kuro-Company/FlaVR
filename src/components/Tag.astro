---
interface Props {
    name: string;
    class?: string;
}

const { name } = Astro.props;
---

{/* eslint-disable-next-line @typescript-eslint/restrict-template-expressions */ }
<a class={"[pointer-events:_all] leading-4 px-2 pb-1.5 pt-0.5 rounded-lg bg-rosePineDawn-muted dark:bg-rosePineMoon-muted hover:bg-rosePineDawn-subtle dark:hover:bg-rosePineMoon-subtle text-rosePineDawn-text dark:text-rosePineMoon-text " + Astro.props.class} href={`/${Astro.currentLocale ?? "en"}/news/tags/${name}/`}>
    {name}
</a>

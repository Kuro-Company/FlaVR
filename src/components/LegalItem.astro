---
import * as m from "~/paraglide/messages.js";

interface Props {
    url: string;
    title: string;
    description: string;
    date: Date;
}

const { url, title, description, date } = Astro.props;
---
<li class="h-full">
    <a class="h-full flex flex-col rounded-md shadow-sm p-4 cursor-pointer bg-rose-pine-dawn-surface dark:bg-rose-pine-moon-surface hover:bg-rose-pine-dawn-overlay dark:hover:bg-rose-pine-moon-overlay" href={url}>
        <p class="text-xs text-rose-pine-dawn-text/90 dark:text-rose-pine-moon-text/90">{m.lastUpdated({ date: date.toLocaleString(Astro.currentLocale, { dateStyle: "long" }) })}</p>
        <h3 class="text-2xl font-bold">{title}</h3>
        <p class="text-rose-pine-dawn-text/90 dark:text-rose-pine-moon-text/90">{description}</p>
    </a>
</li>
